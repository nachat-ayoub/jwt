<html>
<head>
    
  <title> Edit Post </title>

    <%- include('head') %>

</head>

<body>
    <% if(user !== null ) { %>
      <% if(user.role == 'admin' ) { %>
             <%- include('navAdmin') -%>
      <% } else { %>
           <%- include('navLogout') -%>
      <% } %>
    <% } else { %>
      <%- include('nav') -%>
    <% } %>
<main class="container d-flex justify-content-center align-items-center">


  <form class="add-form" method="POST" action="/posts/edit/<%= post._id %>?_method=PUT" enctype="multipart/form-data" >

<!-- 
    <input type="hidden" name="_method" value="PUT"> -->

    <div class="text-center">
      <h1>EDIT POST</h1>
    </div>
    <div class="mt-3">

      <div class="mb-3 d-flex align-items-center flex-column">
        <img class="rounded" src="<%= post.image %>">
<!--         <a href="/posts/edit/img/<%= post._id %>" class="btn mt-3 btn-primary form-label">Edit Image</a> -->
      </div>
      <div class="row">
        <div class="mb-3 col">
          <label for="title" class="form-label">Title<span>*</span></label>
          <input required value="<%= post.title %>" type="text" name="title" class="form-control" id="title">
        </div>
        <div class="mb-3 col">
          <label for="image"  class="form-label">Image<span>*</span></label>
          <input type="file" name="image" class="form-control" id="image">
        </div>
      </div>
        

      <div class="mb-3 ">
        <label for="body"  class="form-label">Body<span>*</span></label>
        <textarea required id="body" name="body" class="form-control textarea w-100" rows="5"><%= post.body %></textarea> 
      </div>
    </div>

    <div class="d-flex justify-content-center align-items-center mt-4">
      <button type="submit" class="btn-lg btn-grad px-4 py-2 mr-3">
        Save
      </button>
      <div class="backHome">
        <span class="mr-2">Or </span> 
        <a href="/user"> Cancel.</a>
      </div>
    </div>
  </form>



</main>


